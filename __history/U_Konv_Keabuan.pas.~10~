procedure TFormKonversiKeabuan.Button1Click(Sender: TObject);
begin
if OpenPictureDialog.Execute then
    begin
     // if F_Citra = nil then


      with F_Citra do
      begin
ImageSumber.Picture.LoadFromFile(OpenPictureDialog.FileName);
